---
interface Props {
  text: string;
  href: string;
}

const { text, href } = Astro.props;
---

<a href={href} class="bg-white text-blue font-bold py-5 px-8 shadow-md transition-all duration-300 hover:bg-[#ECE9FF] hover:shadow-lg active:bg-white active:shadow-none text-xl cursor-pointer">
  {text}
</a>
