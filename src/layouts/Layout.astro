---
import Footer from "@components/Footer.astro";
import CookieConsent from "../components/CookieConsent.astro";
import IframeManager from "@components/IframeManager.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Whyuluvfootball website" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <slot />
      <CookieConsent />
      <IframeManager />
      <Footer />
    </main>
  </body>
</html>
